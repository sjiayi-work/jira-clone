@startuml database

entity workspaces {
    * workspaceId: string <<auto-generated>>
    * name: string
    * inviteCode: string
    imageUrl: string
    ---
    * userId: string <<FK>>
}

entity members {
    * userId: string <<FK>>
    * workspaceId: string <<FK>>
    ---
    * role: enum
}

entity projects {
    * workspaceId: string <<FK>>
    ---
    * name: string
    imageUrl: string
}

workspaces ||--|{ members
workspaces ||--o{ projects

@enduml